<nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="index.html">Blog Site</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
                @foreach (var item in Model)
                {
                    <li class="@item.InverseParent.Count==0 ? @string.Empty : dropdown"> 
                       @if (item.InverseParent.Count == 0)
                       {
                        <a asp-controller="@item.Controller" asp-action="@item.Action"    >@item.Name</a>}
                       else
                        {
                    <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" asp-controller="@item.Controller" asp-action="@item.Action">@item.Name</a>
                        }
                       
                        @if (@item.InverseParent.Count != 0)
                        {
                         <ul class="dropdown-menu">
                         @foreach (var subitem in item.InverseParent)
                         {
                             <li><a asp-controller="@subitem.Controller" asp-action="@subitem.Action">@subitem.Name</a></li>
                         }
                            
                        </ul>
                        }
                    </li>
                    @*</li>*@
                }
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container -->
</nav>